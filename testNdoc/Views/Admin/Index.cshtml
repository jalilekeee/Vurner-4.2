@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

@using testNdoc.Models
    @model IEnumerable<Section>
    @{
        ViewData["Title"] = "Home Page";
    }
    <h2>Нормативно - правовые документы</h2>
    <p><a asp-action="Create" class="btn btn-primary">Добавить компонент</a></p>
    <table class="table">
        <tr><th>Главная</th></tr>
        @foreach (var item in Model)
        {
          
            <tr> <td>@item.Name</td>
            <td>
                 <a asp-action="Edit" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-warning">Изменить</a>
                 <a asp-action="Delete" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
            </td></tr>
        }
    </table>
    <a asp-area="Identity" class="btn-outline-primary btn mb-3" asp-page="/Account/Register">Зарегистрировать нового пользователя</a>
    <form method="post" asp-area="Identity" asp-page="/Account/Login" asp-page-handler="Logout">
		<input type="submit" class="btn-outline-primary btn mb-3" value="Выйти из админки" />
	</form>
    




   
       








    
    









